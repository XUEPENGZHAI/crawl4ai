{
  // ============================================
  // Crawl4ai 子模块 VSCode 配置
  // Python 3.12.10 + uv 虚拟环境管理
  // ============================================

  // Python 解释器配置 (uv 虚拟环境)
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
  // 如果使用 conda 环境，取消下面注释并注释上面的 uv 路径
  // "python.defaultInterpreterPath": "C:/Users/YOUR_USERNAME/anaconda3/envs/crawl4ai/python.exe",

  // Python 语言服务器
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",

  // 格式化配置 (使用 Black)
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "--line-length=100"
  ],
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.python",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },

  // Linting 配置 (使用 Flake8 和 mypy)
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--max-line-length=100",
    "--ignore=E203,W503"
  ],
  "python.linting.mypyEnabled": true,
  "python.linting.pylintEnabled": false,

  // 测试配置 (pytest)
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests"
  ],

  // 文件排除配置
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.coverage": true,
    "**/.hypothesis": true,
    "**/*.egg-info": true,
    "**/.venv": false,
    "**/.env": false,
    "**/venv": true,
    "**/ENV": true,
    "**/.tox": true,
    "**/.nox": true,
    "**/dist": true,
    "**/build": true,
    "**/.data": true,
    "**/.tests": true,
    "**/.test_pads": true,
    "**/tmp": true,
    "**/.DS_Store": true
  },

  // 搜索排除配置
  "search.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/*.egg-info": true,
    "**/.venv": true,
    "**/venv": true,
    "**/dist": true,
    "**/build": true,
    "**/.data": true,
    "**/uv.lock": true,
    "**/.DS_Store": true
  },

  // 文件监视排除
  "files.watcherExclude": {
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.data/**": true
  },

  // 终端配置
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}"
  },

  // 自动保存
  "files.autoSave": "onFocusChange",

  // 尾随空格
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // 编辑器配置
  "editor.rulers": [100],
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,

  // Git 配置
  "git.ignoreLimitWarning": true,

  // Markdown 配置
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },

  // YAML 配置
  "[yaml]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // JSON 配置
  "[json]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // TOML 配置
  "[toml]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // Dockerfile 配置
  "[dockerfile]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  }
}
